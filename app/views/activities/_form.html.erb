<h1><%= @activity.id ? 'Edit activity' : 'Create activity' %></h1>
<hr />
<%= form_for [@list, @activity] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :body %>
  <%= f.text_area :body, required: true %>
  <%= f.submit %>
<% end %>
